= form_for @user do |f|
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
    - if current_user
      - if current_user.role == 'admin' 
        .field
          = f.label :role
          = f.select :role, options_for_select(User.full_roles_list)
      - elsif current_user.role == 'staff' 
        .field
          = f.label :role
          = f.select :role, options_for_select(User.roles_list)      
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .field
    = f.label :mobile
    = f.text_field :mobile
  .field
    = f.label :ice_mobile
    = f.text_field :ice_mobile
  %p
    = f.submit










