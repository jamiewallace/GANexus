%h2 GA people
- if can? :manage, current_user
  =link_to "Add a new user", new_user_path(@user)
%p
- for user in @users
  %h3= link_to "#{user.first_name} #{user.last_name}", user
  %p
  Role:
  = user.role
  - if can? :manage, user
    %p
    Email:
    = user.email
  - if can? :manage, user
    %p
    Mobile:
    = user.mobile
  - if can? :manage, user
    %p
    ICE mobile:
    = user.ice_mobile
  
