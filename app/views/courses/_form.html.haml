= form_for @course do |f|
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :short_desc
    = f.text_field :short_desc
  .field
    = f.label :long_desc
    = f.text_field :long_desc
  .field
    = f.label :cost
    = f.text_field :cost 
    - if current_user && current_user.role == 'staff' || 'admin'
      .field
        = f.label :room_id
        = f.select :room_id, options_for_select(@rooms.map {|room| [room.name, room.id]})
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :start_time
    = f.time_select :start_time
  .field
    = f.label :end_time
    = f.time_select :end_time
  %p
    = f.submit