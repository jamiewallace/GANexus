= form_for @course do |f|
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :short_desc
    = f.text_field :short_desc
  .field
    = f.label :long_desc
    = f.text_field :long_desc
  .field
    = f.label :cost
    = f.text_field :cost 
  .field
    = f.label :start_date
    = f.text_field :start_date
  .field
    = f.label :end_date
    = f.text_field :end_date
  .field
    = f.label :start_time
    = f.text_field :end_time
  %p
    = f.submit


